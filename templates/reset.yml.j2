---
interfaces:
  - name: {{ backdoor_interface }}
    type: ethernet
    description: backdoor-interface
    state: up
    ipv4:
      enabled: true
      dhcp: true
      auto-dns: false
      auto-gateway: false
    ipv6:
      enabled: false
  - name: {{ primary_interface }}
    type: ethernet
    description: primare-interface
    state: absent
  - name: {{ secondary_interface }}
    type: ethernet
    description: secondary-interface
    state: absent
  - name: bond0
    state: absent
  - name: bond0-port0
    state: absent
  - name: bond0-port1
    state: absent
  - name: bond0.10
    state: absent
  - name: ovs-if-br-ex
    state: absent
  - name: br-ex
    state: absent
    type: ovs-interface
  - name: br-ex
    state: absent
    type: ovs-bridge
